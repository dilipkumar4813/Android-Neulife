<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_margin="1dp"
            android:src="@drawable/neulife_product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/grid_item_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:text="Optimum Neutrition-Platinum"
                    android:textColor="#000000"
                    android:textSize="11sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:background="@drawable/add_to_cart" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@drawable/listing_share_icon" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/listing_whishlist_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/button212"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:background="@drawable/rating_star"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        android:text="4.5"
                        android:textSize="7dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 rating"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/strANDSym"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 review"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="18dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="11dp"
                            android:layout_height="9dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/sym_rupee"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvOPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/-"
                            android:textColor="#989896"
                            android:textSize="9sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Starts from"
                            android:textColor="#989896"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="32dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="12dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/sym_rupee" />

                        <TextView
                            android:id="@+id/tvPPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/-"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>