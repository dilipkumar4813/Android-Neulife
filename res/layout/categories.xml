<LinearLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
     >
<LinearLayout 
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:fontFamily="Roboto-Thin"
            android:gravity="center"
            android:text="Shop by Category"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <!-- General Health Button -->

    <RelativeLayout
        android:id="@+id/generalHealthBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlHeader"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="General Health"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/general_health_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Sports Nutrition Button -->

    <RelativeLayout
        android:id="@+id/sportsNutritionBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/generalHealthBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Sports Nutrition"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sports_nutrition_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Protein Powders Button -->

    <RelativeLayout
        android:id="@+id/proteinPowdersBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sportsNutritionBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Protein Powders"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/protein_powder_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Diet Products Button -->

    <RelativeLayout
        android:id="@+id/DietProductsBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/proteinPowdersBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Diet Products"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/diet_products_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Health Food Button -->

    <RelativeLayout
        android:id="@+id/healthFoodBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/DietProductsBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Health Foods"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/food_health_icon" />
    </RelativeLayout>

    <!-- Sports and Accessories Button -->

    <RelativeLayout
        android:id="@+id/sportsAccessoriesBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/healthFoodBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Sports and Accessories"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/sports_accessories_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Apparels Button -->

    <RelativeLayout
        android:id="@+id/apparelBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sportsAccessoriesBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Apparels"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/apparel_icon"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Steal Deals Button -->

    <RelativeLayout
        android:id="@+id/stealDealsBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/apparelBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_btn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Steal Deals"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/steal_deal_icon"
            android:padding="10dp" />
    </RelativeLayout>
    
    </LinearLayout>
    
    </ScrollView>
     <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       />
     
 <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/footer" />
   

</LinearLayout>

