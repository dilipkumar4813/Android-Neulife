<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#dcdcdc"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivAdImage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/neulife_product" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:gravity="center"
                    android:orientation="vertical" >
                    

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="left"
                        android:layout_weight="40"
                        android:orientation="vertical" >
                        <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                       />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tvAdTiltle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:paddingLeft="1dp"
                            android:text=" Platinum Hydro Builder "
                            android:textColor="#000000"
                            android:textSize="13sp" />
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ivAdImage1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="3dp"
                            android:paddingLeft="1dp"
                            android:src="@drawable/sym_rupee" />

                        <TextView
                            android:id="@+id/tvPriceInListview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="4dp"
                            android:text="0/-"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvAvailabilty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="2dp"
                        android:layout_marginTop="1dp"
                        android:text="In stock"
                         android:layout_marginLeft="2dp"
                        android:textColor="#6BB75B"
                        android:textSize="14dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                       />
                    </LinearLayout>
                    
                    

                    

                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="42"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" >

                        <ImageView
                            android:id="@+id/deleteFromCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/block_close_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:paddingLeft="1dp"
                            android:text="Quantity: "
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <EditText
                            android:maxLength="3"
                            android:id="@+id/etQuantity"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:background="@drawable/rounded_corners_qty"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>